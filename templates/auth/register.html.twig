{% extends 'base.html.twig' %}
{% trans_default_domain "auth" %}



{% block content %}

    <div class="container center-middle">
        <div class="row justify-content-center mt-5">
            <div class="col-lg-7 col-md-8 col-sm-12 bg-white p-4">

                <h1 class="mb-2">{{ 'auth.registerHeader'|trans }}</h1>
                <hr>
                <p class="text-muted">{{ 'auth.registerHint1'|trans }}</p>

                {{ form_start(form) }}

                <div class="mb-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="icon-user"></i></span>
                        </div>
                        {{ form_widget(form.username, {attr: {class: 'form-control', placeholder: "auth.username"}}) }}
                    </div>
                    {{ form_errors(form.username) }}
                </div>

                <div class="mb-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">@</span>
                        </div>
                        {{ form_widget(form.email, {attr: {class: 'form-control', placeholder: "auth.email"}}) }}
                    </div>
                    {% if form.email.vars.errors|length == 0 %}
                        <p class="form-text text-muted font-sm">
                        </p>
                    {% endif %}
                    {{ form_errors(form.email) }}
                </div>

                <div class="mb-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="icon-lock"></i></span>
                        </div>
                        {{ form_widget(form.plainPassword.first, {attr: {class: 'form-control', placeholder: "auth.password"}}) }}
                    </div>
                    {{ form_errors(form.plainPassword.first) }}
                </div>

                <div class="mb-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="icon-lock"></i></span>
                        </div>
                        {{ form_widget(form.plainPassword.second, {attr: {class: 'form-control', placeholder: "auth.passwordRepeat"}}) }}
                    </div>
                    {{ form_errors(form.plainPassword.second) }}
                </div>

                <div class="font-sm text-muted mb-4 px-1">
                    <div class="mb-1">
                        <i class="fa fa-exclamation-triangle" style="width: 16px; text-align: center;"></i>
                        Rejestrując się potwierdzasz, że zapoznałeś się z Regulaminem
                        i akceptujesz jego warunki.
                    </div>
                </div>

                <button type="submit" class="btn btn-block btn-success">{{ 'auth.registerBtn'|trans }}</button>

                {{ form_end(form) }}

                <div class="mt-3">
                    {{ 'auth.alreadyHaveAccountQuestion'|trans }} <a
                            href="{{ path('auth_login', {'_target_path': app.request.query.get('_target_path')}) }}">{{ 'auth.alreadyHaveAccountQuestionLogin'|trans }}</a>
                </div>

                <hr>
                <p class="text-muted">{{ 'auth.registerHint2'|trans }}</p>
                <div class="row mt-3">
                    <div class="col-xl-6">
                        <a href="{{ path('auth_oauth', {'type': 'facebook', '_target_path': app.request.query.get('_target_path')}) }}"
                           class="btn btn-lg btn-facebook d-block position-relative">
                            <i style="left: 14px; top: 11px; font-size: 20px;"
                               class="fa fa-facebook position-absolute"></i>
                            <span style="font-size: 16px;">
                                {{ 'auth.registerByFacebook'|trans }}
                            </span>
                        </a>
                    </div>
                    <div class="col-xl-6 mt-2 mt-xl-0">
                        <a href="{{ path('auth_oauth', {'type': 'google', '_target_path': app.request.query.get('_target_path')}) }}"
                           class="btn btn-lg btn-google-plus d-block position-relative">
                            <i style="left: 12px; top: 11px; font-size: 20px;"
                               class="fa fa-google-plus position-absolute"></i>
                            <span style="font-size: 16px;">
                                {{ 'auth.registerByGoogle'|trans }}
                            </span>
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}